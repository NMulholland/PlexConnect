<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="http://trailers.apple.com/settings.js"/>
  </head>
  <body>
    {{ADDXMLRELATIVE(onDeck:OnDeck)}}
    {{ADDXMLRELATIVE(recentlyAdded:RecentlyAdded)}}
    {{ADDXMLRELATIVE(newest:RecentlyReleased)}}
    
    <scroller id="com.sample.movie-showcase-grid">
      <items>
        <collectionDivider alignment="left" accessibilityLabel="On Deck">
          <title>On Deck</title>
        </collectionDivider>
        <shelf id="shelf_0" columnCount="7">
          <sections>
            <shelfSection>
              <items>
                <moviePoster id="{{VAL(key)}}" accessibilityLabel="{{VAL(title)}}" onPlay="atv.sessionStorage['addrpms']='{{ADDR_PMS()}}';{{sendToATV(ratingKey:0:duration:0)}};atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}{{PLAY_COMMAND()}})"
                 onSelect="atv.sessionStorage['addrpms']='{{ADDR_PMS()}}';{{sendToATV(ratingKey:0:duration:0)}};atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=MoviePrePlay')">
                  {{COPY(@OnDeck/Video)}}
                  <title>{{VAL(title)}}</title>
                  <subtitle>{{VAL(year)}}</subtitle>
                  <image>{{IMAGEURL(thumb)}}</image>
                  <defaultImage>resource://Poster.png</defaultImage>
                </moviePoster>
              </items>
            </shelfSection>
          </sections>
        </shelf>
        
        <collectionDivider alignment="left" accessibilityLabel="Recently Added">
          <title>Recently Added</title>
        </collectionDivider>
        <shelf id="shelf_1" columnCount="7">
          <sections>
            <shelfSection>
              <items>
                <moviePoster id="{{VAL(key)}}" accessibilityLabel="{{VAL(title)}}" onPlay="atv.sessionStorage['addrpms']='{{ADDR_PMS()}}';{{sendToATV(ratingKey:0:duration:0)}};atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}{{PLAY_COMMAND()}})"
                 onSelect="atv.sessionStorage['addrpms']='{{ADDR_PMS()}}';{{sendToATV(ratingKey:0:duration:0)}};atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=MoviePrePlay')">
                  {{COPY(@RecentlyAdded/Video)}}
                  <title>{{VAL(title)}}</title>
                  <subtitle>{{VAL(year)}}</subtitle>
                  <image>{{IMAGEURL(thumb)}}</image>
                  <defaultImage>resource://Poster.png</defaultImage>
                </moviePoster>
              </items>
            </shelfSection>
          </sections>
        </shelf>
        
        <collectionDivider alignment="left" accessibilityLabel="Recently Released">
          <title>Recently Released</title>
        </collectionDivider>
        <shelf id="shelf_2" columnCount="7">
          <sections>
            <shelfSection>
              <items>
                <moviePoster id="{{VAL(key)}}" accessibilityLabel="{{VAL(title)}}" onPlay="atv.sessionStorage['addrpms']='{{ADDR_PMS()}}';{{sendToATV(ratingKey:0:duration:0)}};atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}{{PLAY_COMMAND()}})"
                 onSelect="atv.sessionStorage['addrpms']='{{ADDR_PMS()}}';{{sendToATV(ratingKey:0:duration:0)}};atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=MoviePrePlay')">
                  {{COPY(@RecentlyReleased/Video)}}
                  <title>{{VAL(title)}}</title>
                  <subtitle>{{VAL(year)}}</subtitle>
                  <image>{{IMAGEURL(thumb)}}</image>
                  <defaultImage>resource://Poster.png</defaultImage>
                </moviePoster>
              </items>
            </shelfSection>
          </sections>
        </shelf>
      </items>
    </scroller>
  </body>
</atv>
